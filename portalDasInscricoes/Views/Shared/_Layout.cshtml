<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Das Inscrições</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/portalDasInscricoes.styles.css" asp-append-version="true" /> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background-color: #1a1a1a;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <!-- Logo com cor original branca -->
                    <img src="~/img/logo-pi-3.png" alt="Portal das Inscrições" width="60" height="60" class="me-2" style="filter: none;" />
                    <div class="d-flex flex-column lh-sm">
                        <span class="fw-bold text-white">Portal</span>
                        <span class="fw-bold text-white">das Inscrições</span>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#modalNovaCorrida">
                                Nova Corrida
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-white" style="background-color: #1a1a1a; padding: 40px 0;">
        <div class="container text-center">
            <!-- Logo e Nome centralizado -->
            <a class="navbar-brand d-flex flex-column align-items-center text-white mb-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo-pi-3.png" alt="Portal das Inscrições" width="60" height="60" class="mb-2" />
                <div class="lh-sm">
                    <span class="fw-bold">Portal</span>
                    <span class="fw-bold">das Inscrições</span>
                </div>
            </a>

            <!-- Texto Institucional -->
            <p class="mt-2 mb-0 px-3" style="max-width: 700px; margin-left: auto; margin-right: auto; line-height: 1.6;">
                O Portal das Inscrições foi idealizado para facilitar a conexão entre organizadores e atletas,<br>
                centralizando eventos esportivos e inscrições em um só lugar.
            </p>

            <!-- Direitos autorais -->
            <div class="mt-4 border-top pt-3" style="border-color: rgba(255,255,255,0.1) !important;">
                <small>&copy; 2025 - Portal das Inscrições - Todos os direitos reservados.</small>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
